root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
ij_continuation_indent_size = 8
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on

[{*.java,*.groovy}]
max_line_length = 120

[{*.markdown,*.md}]
trim_trailing_whitespace = false

[{*.xml,*.json}]
indent_size = 4

[{*.yaml,*.yml}]
indent_size = 2
